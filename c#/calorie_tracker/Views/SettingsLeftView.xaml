<!--Authors: Dalibor Kalina-->
    <UserControl x:Class="ITUvec.Views.SettingsLeftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITUvec.Views"
             xmlns:viewModels="clr-namespace:ITUvec.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
        BorderBrush="#294F27"
        BorderThickness="10, 10, 10, 10"
        Background="#DEF3E0"
     >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="0.15*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.03*"></RowDefinition>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="0.03*"></RowDefinition>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="0.03*"></RowDefinition>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="0.03*"></RowDefinition>
                    <RowDefinition Height="0.2*"></RowDefinition>
                    <RowDefinition Height="0.03*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!-- GENDER ROW DEFINITION -->
                <Border Grid.Row="1" 
                        Grid.Column="1" 
                        BorderBrush="#D3EACF"
                        Background="#D3EACF"
                        CornerRadius="8" >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                            <ColumnDefinition Width="0.7*"></ColumnDefinition>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Source="/images/Gender_Icon.png"
                               Margin="10"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Pohlaví"
                                   FontSize="35"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   />


                        <Grid Grid.Column="2" Grid.ColumnSpan="2" Margin="0, 5, 0, 5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.2*"/>
                                <RowDefinition Height="0.6*"/>
                                <RowDefinition Height="0.2*"/>
                            </Grid.RowDefinitions>
                            
                            <Button Grid.Column="1" Grid.Row="1" Command="{Binding MaleTransitionCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                                Margin="4,4,0,4" Visibility="{Binding GenderButtonsColor[0]}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border     
                                        x:Name="weekbutton"
                                        BorderBrush="#82CF7E"
                                        Background="#82CF7E"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="8,0,0,8"
                                    >

                                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                                <TextBlock Text="Muž" 
                                                Margin="15,15,15,15"
                                                FontSize="40"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="weekbutton" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#82CF7E" Offset="0" />
                                                            <GradientStop Color="#FF398239" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="2" Grid.Row="1" Command="{Binding FemaleTransitionCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                                Margin="0,4,0,4" Visibility="{Binding GenderButtonsColor[3]}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border     
                                        x:Name="monthbutton"
                                        BorderBrush="#AFAFAF"
                                        Background="#AFAFAF"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="0,8,8,0"
                                    >

                                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                                <TextBlock Text="Žena" 
                                                Margin="15,15,15,15"
                                                FontSize="40"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="monthbutton" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#AFAFAF" Offset="0" />
                                                            <GradientStop Color="#777777" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="1" Grid.Row="1" Command="{Binding MaleTransitionCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                                Margin="4,4,0,4" Visibility="{Binding GenderButtonsColor[1]}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border     
                                        x:Name="weekbutton"
                                        BorderBrush="#AFAFAF"
                                        Background="#AFAFAF"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="8,0,0,8"
                                    >

                                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                                <TextBlock Text="Muž" 
                                                Margin="15,15,15,15"
                                                FontSize="40"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="weekbutton" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#AFAFAF" Offset="0" />
                                                            <GradientStop Color="#777777" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="2" Grid.Row="1" Command="{Binding FemaleTransitionCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                                Margin="0,4,0,4" Visibility="{Binding GenderButtonsColor[2]}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border     
                                        x:Name="monthbutton"
                                        BorderBrush="#82CF7E"
                                        Background="#82CF7E"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="0,8,8,0"
                                    >

                                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                                <TextBlock Text="Žena" 
                                                Margin="15,15,15,15"
                                                FontSize="40"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                            </Viewbox>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="monthbutton" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="#82CF7E" Offset="0" />
                                                            <GradientStop Color="#FF398239" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                        </Grid>

                        

                    </Grid>
                </Border>
                <!-- END OF GENDER ROW DEFINITION -->
                
                <!-- AGE ROW DEFINITION -->
                <Border Grid.Row="3" 
                        Grid.Column="1" 
                        BorderBrush="#D3EACF"
                        Background="#D3EACF"
                        CornerRadius="8" >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                            <ColumnDefinition Width="0.7*"></ColumnDefinition>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Source="/images/Age_Icon.png"
                               Margin="10"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Věk"
                                   FontSize="35"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   />

                        <TextBox Name="AgeTextBox"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Width="300"
                                 Height="40"
                                 FontSize="25"
                                 Foreground="#294F27"
                                 Text="{Binding AgeTextBoxText}"
                                 PreviewTextInput="NumberValidationTextBox">

                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="3"
                                   Text="let"
                                   FontSize="25"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <!-- END OF AGE ROW DEFINITION -->

                <!-- HEIGHT ROW DEFINITION -->
                <Border Grid.Row="5" 
                        Grid.Column="1" 
                        BorderBrush="#D3EACF"
                        Background="#D3EACF"
                        CornerRadius="8" >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                            <ColumnDefinition Width="0.7*"></ColumnDefinition>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Source="/images/Height_Icon.png"
                               Margin="10"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Výška"
                                   FontSize="35"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   />

                        <TextBox Name="HeightTextBox"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Width="300"
                                 Height="40"
                                 FontSize="25"
                                 Foreground="#294F27"
                                 Text="{Binding HeightTextBoxText}"
                                 PreviewTextInput="NumberValidationTextBox">

                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <ComboBox Grid.Row="0"
                                  Grid.Column="3"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Width="80"
                                  Height="40"
                                  FontSize="25"
                                  SelectedIndex="{Binding HeightComboBoxValue}">
                            <ComboBoxItem>cm</ComboBoxItem>
                            <ComboBoxItem>inch</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Border>
                <!-- END OF HEIGHT ROW DEFINITION -->

                <!-- WEIGHT ROW DEFINITION -->
                <Border Grid.Row="7" 
                        Grid.Column="1" 
                        BorderBrush="#D3EACF"
                        Background="#D3EACF"
                        CornerRadius="8" >

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                            <ColumnDefinition Width="0.3*"></ColumnDefinition>
                            <ColumnDefinition Width="0.7*"></ColumnDefinition>
                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Source="/images/Weight_Icon.png"
                               Margin="10"/>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Hmotnost"
                                   FontSize="35"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   />

                        <TextBox Name="WeightTextBox"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Width="300"
                                 Height="40"
                                 FontSize="25"
                                 Foreground="#294F27"
                                 Text="{Binding WeightTextBoxText}"
                                 PreviewTextInput="NumberValidationTextBox">

                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <ComboBox Grid.Row="0"
                                  Grid.Column="3"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Width="80"
                                  Height="40"
                                  FontSize="25"
                                  SelectedIndex="{Binding WeightComboBoxValue}">
                            <ComboBoxItem>kg</ComboBoxItem>
                            <ComboBoxItem>lb</ComboBoxItem>
                        </ComboBox>
                    </Grid>
                </Border>
                <!-- END OF WEIGHT ROW DEFINITION -->

            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Background="#294F27"/>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Grid.Row="0" Command="{Binding StornoProfileSettingsCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                    Margin="10" Visibility="{Binding SettingsButtonsVisibility}"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="StornoButton"
                                BorderBrush="#82CF7E"
                                Background="#82CF7E"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <TextBlock Text="Storno" 
                                    Margin="15,15,15,15"
                                    FontSize="50"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    />
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="StornoButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#82CF7E" Offset="0" />
                                                <GradientStop Color="#FF398239" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock  Grid.Row="0"
                            Grid.Column="1"
                            Text="Jste si jistí?"
                            FontWeight="SemiBold"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#294F27"
                            Visibility="{Binding StornoValidationButtonsVisibility}"
                />

                <Button Grid.Column="2" Grid.Row="0" Command="{Binding YesStornoProfileSettingsCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                    Visibility="{Binding StornoValidationButtonsVisibility}" Margin="10"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="YesButton"
                                BorderBrush="#82CF7E"
                                Background="#82CF7E"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <TextBlock Text="Ano" 
                                    Margin="15,15,15,15"
                                    FontSize="50"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    />
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="YesButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#82CF7E" Offset="0" />
                                                <GradientStop Color="#FF398239" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="3" Grid.Row="0" Command="{Binding NoStornoProfileSettingsCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                    Visibility="{Binding StornoValidationButtonsVisibility}" Margin="10"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="NoButton"
                                BorderBrush="#FF3F49"
                                Background="#FF3F49"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <TextBlock Text="Ne" 
                                    Margin="15,15,15,15"
                                    FontSize="50"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    />
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="NoButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF3F49" Offset="0" />
                                                <GradientStop Color="#B72D37" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <Button Grid.Column="4" Grid.Row="0" Command="{Binding SaveProfileSettingsCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                    Visibility="{Binding SettingsButtonsVisibility}" Margin="10"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="SaveButton"
                                BorderBrush="#82CF7E"
                                Background="#82CF7E"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <TextBlock Text="Uložit" 
                                    Margin="15,15,15,15"
                                    FontSize="50"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="White"
                                    />
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="SaveButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#82CF7E" Offset="0" />
                                                <GradientStop Color="#FF398239" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

        </Grid>
        
    </Border>
</UserControl>
