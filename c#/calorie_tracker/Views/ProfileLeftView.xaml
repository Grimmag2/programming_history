                    </Grid>

                </Grid>


                <!--FAVORITE FOOD GRAPH-->
                <Grid x:Name="FoodGraph" Grid.Row="0" Grid.Column="2" Visibility="{Binding FoodGraphVisibility}" Height="252" VerticalAlignment="Top">
                    <!--Visibility="{Binding FoodGraphVisibility}"-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"></RowDefinition>
                        <RowDefinition Height="0.3*"></RowDefinition>
                        <RowDefinition Height="0.05*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--NAME OF GRAPH-->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Oblíbené pokrmy"
                               FontSize="25"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#294F27"
                               />




                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.07*"></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition Width="0.05*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.15*"></RowDefinition>
                            <RowDefinition Height="0.01*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--TEXTBLOCKS FOR Y AXIS-->
                        <Grid Grid.Row="0"
                              Grid.Column="0"
                              >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.04*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                                <RowDefinition Height="0.04*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                                <RowDefinition Height="0.04*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                                <RowDefinition Height="0.04*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                                <RowDefinition Height="0.04*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                                <RowDefinition Height="0.04*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock  Grid.Row="1"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodNames[0]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#294F27"
                                           Margin="0,0,10,0"
                                           />
                            <TextBlock  Grid.Row="3"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodNames[1]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#294F27"
                                           Margin="0,0,10,0"
                                           />
                            <TextBlock  Grid.Row="5"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodNames[2]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#294F27"
                                           Margin="0,0,10,0"
                                           />
                            <TextBlock  Grid.Row="7"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodNames[3]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#294F27"
                                           Margin="0,0,10,0"
                                           />
                            <TextBlock  Grid.Row="9"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodNames[4]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#294F27"
                                           Margin="0,0,10,0"
                                           />
                        </Grid>
                        

                        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="8">
                            <Grid Grid.Column="1" x:Name="FoodGraph2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.04*"></RowDefinition>
                                </Grid.RowDefinitions>


                                <!--FIRST ROW ON GRAPH = 1. favorite food-->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding FoodColumnWidth[0]}"></ColumnDefinition>
                                        <ColumnDefinition Width="{Binding FoodColumnWidthNegative[0]}"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding FoodColor[0]}" CornerRadius="0,10,10,0"/>
                                    <TextBlock
                                           Grid.Column="0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodCount[0]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,10,0"
                                           />
                                </Grid>
                                <!--SECOND ROW ON GRAPH = 2. favorite food-->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding FoodColumnWidth[1]}"></ColumnDefinition>
                                        <ColumnDefinition Width="{Binding FoodColumnWidthNegative[1]}"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding FoodColor[1]}" CornerRadius="0,10,10,0"/>
                                    <TextBlock
                                           Grid.Column="0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodCount[1]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,10,0"
                                           />
                                </Grid>
                                <!--THIRD ROW ON GRAPH = 3. favorite food-->
                                <Grid Grid.Row="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding FoodColumnWidth[2]}"></ColumnDefinition>
                                        <ColumnDefinition Width="{Binding FoodColumnWidthNegative[2]}"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding FoodColor[2]}" CornerRadius="0,10,10,0"/>
                                    <TextBlock
                                           Grid.Column="0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodCount[2]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,10,0"
                                           />
                                </Grid>
                                <!--FOURTH ROW ON GRAPH = 4. favorite food-->
                                <Grid Grid.Row="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding FoodColumnWidth[3]}"></ColumnDefinition>
                                        <ColumnDefinition Width="{Binding FoodColumnWidthNegative[3]}"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding FoodColor[3]}" CornerRadius="0,10,10,0"/>
                                    <TextBlock
                                           Grid.Column="0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodCount[3]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,10,0"
                                           />
                                </Grid>
                                <!--FIFTH ROW ON GRAPH = 5. favorite food-->
                                <Grid Grid.Row="9">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding FoodColumnWidth[4]}"></ColumnDefinition>
                                        <ColumnDefinition Width="{Binding FoodColumnWidthNegative[4]}"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding FoodColor[4]}" CornerRadius="0,10,10,0"/>
                                    <TextBlock
                                           Grid.Column="0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Text="{Binding FoodCount[4]}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,10,0"
                                           />
                                </Grid>

                                


                            </Grid>
                        </Border>

                    </Grid>
                </Grid>

                <!--Change graph to the next one-->
                <Button Grid.Column="5" Grid.Row="0" Command="{Binding MoveGraphToRightCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                        Margin="10"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="MoveGraphToRightButton"
                                BorderBrush="#82CF7E"
                                Background="#82CF7E"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <Image HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="/ITUvec;component/images/Arrow_alt_lright.png"/>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="MoveGraphToRightButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#82CF7E" Offset="0" />
                                                <GradientStop Color="#FF398239" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>

        </Grid>
    </Border>
</UserControl>
