                                <Grid Grid.Row="0" Grid.Column="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding BilkovinyRatioNegative[1]}"></RowDefinition>
                                        <RowDefinition Height="{Binding BilkovinyRatio[1]}"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="1" Background="{Binding BilkovinyColor}" CornerRadius="6,6,0,0"/>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="13">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="{Binding BilkovinyRatioNegative[2]}"></RowDefinition>
                                        <RowDefinition Height="{Binding BilkovinyRatio[2]}"></RowDefinition>
