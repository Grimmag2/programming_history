<!--Authors: Dalibor Kalina-->
    <UserControl x:Class="ITUvec.Views.ProfileLeftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ITUvec.Views"
             xmlns:viewModels="clr-namespace:ITUvec.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
        BorderBrush="#294F27"
        BorderThickness="10, 10, 10, 10"
        Background="#DEF3E0"
     >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.4*"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="0.6*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition Width="0.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Profile picture-->
                <Viewbox Grid.Column="0"  Grid.Row="1"  Margin="10"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Canvas Width="100" Height="100">
                        <Ellipse Fill="White" Width="100" Height="100">

                        </Ellipse>
                        <Ellipse Stroke="#82CF7E" StrokeThickness="4" Width="100" Height="100">
                            <Ellipse.Fill>
                                <ImageBrush Stretch="Uniform"
                                    ImageSource="{Binding UserProfilePicture}" />
                            </Ellipse.Fill>
                        </Ellipse>

                    </Canvas>
                </Viewbox>

                <!--Name and age-->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Name-->
                    <Viewbox Grid.Row="1" Grid.Column="0" Margin="10,0,0,0">
                        <TextBlock
                               FontSize="45"
                               Text="{Binding UserNameTextBlock}"
                               FontWeight="Bold"
                               Foreground="#294F27"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                    />
                    </Viewbox>

                    <!--Age-->
                    <Viewbox Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" Height="40">
                        <TextBlock
                               FontSize="30"
                               Text="{Binding UserAgeTextBlock}"
                               Foreground="#294F27"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                    />
                    </Viewbox>
                </Grid>

                <Grid Grid.Row="0" Grid.Column="2" Background="#294F27"/>

                <!--Day streak-->
                <Grid Grid.Row="0" Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.9*"></RowDefinition>
                        <RowDefinition Height="0.2*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--Fire icon-->
                    <Image Grid.Row="0"
                       Grid.Column="0" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Source="/ITUvec;component/images/streak.png"
                       Margin="{Binding DaysStreakFireSize}"
                    />
                    <!--Day streak text-->
                    <Viewbox Grid.Row="2" Grid.Column="0" Margin="20,0,20,3">
                        <TextBlock Grid.Row="1" 
                           Grid.Column="0"
                           Text="{Binding DaysStreak}"
                           FontSize="25"
                           FontWeight="Bold"
                           Foreground="#294F27"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                    />
                    </Viewbox>
                </Grid>
                
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Background="#294F27"/>

            
            <Grid Grid.Row="3" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                    <ColumnDefinition Width="0.02*"></ColumnDefinition>
                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                    <ColumnDefinition Width="0.02*"></ColumnDefinition>
                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Change to previous graph button-->
                <Button Grid.Column="0" Grid.Row="0" Command="{Binding MoveGraphToLeftCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                    Margin="10"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border     
                                x:Name="MoveGraphToLeftButton"
                                BorderBrush="#82CF7E"
                                Background="#82CF7E"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                CornerRadius="8"
                            >

                                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                    <Image HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="/ITUvec;component/images/Arrow_alt_left.png"/>
                                </Viewbox>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="MoveGraphToLeftButton" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#82CF7E" Offset="0" />
                                                <GradientStop Color="#FF398239" Offset="1" />
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <!--GRAPHS-->
                <Grid Grid.Row="0" Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"></RowDefinition>
                        <RowDefinition Height="0.3*"></RowDefinition>
                        <RowDefinition Height="0.05*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="0.06*"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="0.04*"></ColumnDefinition>
                            <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            <ColumnDefinition Width="0.04*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <!--Decrease weight button-->
                        <Button Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent"
                                Command="{Binding MinusWeightCommand}"
                                Visibility="{Binding WeightGraphVisibility}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                <Grid>
                                    <Image 
                                        Source="..\images\Remove_dark_red.png"
                                    />
                                </Grid>
                            </Viewbox>
    
                        </Button>

                        <!--Today weight-->
                        <TextBox Name="WeightTextBox"
                                 Visibility="{Binding WeightGraphVisibility}"
                                 Grid.Row="0"
                                 Grid.Column="2"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Margin="0,2,0,2"
                                 FontSize="25"
                                 Foreground="#294F27"
                                 Text="{Binding WeightTextBoxText, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 PreviewTextInput="NumberValidationTextBox">

                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding ChangeWeightCommand}" />
                            </TextBox.InputBindings>
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <!--Increase weight button-->
                        <Button Grid.Row="0" Grid.Column="3"  HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent"
                                Command="{Binding PlusWeightCommand}"
                                Visibility="{Binding WeightGraphVisibility}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                <Grid>
                                    <Image 
                                        Source="..\images\Add_ring_light_green.png"
                                    />
                                </Grid>
                            </Viewbox>

                        </Button>



                        <!--Change time range to week button-->
                        <Button Grid.Column="5" Grid.Row="0" Command="{Binding WeekRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="4,4,0,4" Visibility="{Binding TimeRangeButtonsColor[0]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="week1button"
                                        BorderBrush="#82CF7E"
                                        Background="#82CF7E"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="8,0,0,8"
                                    >

                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Týden" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="week1button" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#82CF7E" Offset="0" />
                                                        <GradientStop Color="#FF398239" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--change time range to month button-->
                        <Button Grid.Column="6" Grid.Row="0" Command="{Binding MonthRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="0,4,0,4" Visibility="{Binding TimeRangeButtonsColor[2]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="month1button"
                                        BorderBrush="#82CF7E"
                                        Background="#82CF7E"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                    >

                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Měsíc" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="month1button" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#82CF7E" Offset="0" />
                                                        <GradientStop Color="#FF398239" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--change time range to year button-->
                        <Button Grid.Column="7" Grid.Row="0" Command="{Binding YearRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="0,4,4,4" Visibility="{Binding TimeRangeButtonsColor[4]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="year1button"
                                        BorderBrush="#82CF7E"
                                        Background="#82CF7E"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="0,8,8,0"
                                    >
                                        

                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Rok" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="year1button" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#82CF7E" Offset="0" />
                                                        <GradientStop Color="#FF398239" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--disabled button for week-->
                        <Button Grid.Column="5" Grid.Row="0" Command="{Binding WeekRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="4,4,0,4" Visibility="{Binding TimeRangeButtonsColor[1]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="weekbutton"
                                        BorderBrush="#AFAFAF"
                                        Background="#AFAFAF"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="8,0,0,8"
                                    >

                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Týden" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="weekbutton" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#AFAFAF" Offset="0" />
                                                        <GradientStop Color="#777777" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--disabled button for month-->
                        <Button Grid.Column="6" Grid.Row="0" Command="{Binding MonthRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="0,4,0,4" Visibility="{Binding TimeRangeButtonsColor[3]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="monthbutton"
                                        BorderBrush="#AFAFAF"
                                        Background="#AFAFAF"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                    >

                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Měsíc" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="monthbutton" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#AFAFAF" Offset="0" />
                                                        <GradientStop Color="#777777" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!--disabled button for year-->
                        <Button Grid.Column="7" Grid.Row="0" Command="{Binding YearRangeCommand}" CommandParameter="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                            Margin="0,4,4,4" Visibility="{Binding TimeRangeButtonsColor[5]}"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border     
                                        x:Name="yearbutton"
                                        BorderBrush="#AFAFAF"
                                        Background="#AFAFAF"
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch"
                                        CornerRadius="0,8,8,0"
                                    >


                                        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                                            <TextBlock Text="Rok" 
                                                Margin="15,15,15,15"
                                                FontSize="50"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="White"
                                                />
                                        </Viewbox>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="yearbutton" Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#AFAFAF" Offset="0" />
                                                        <GradientStop Color="#777777" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Grid>

                <!--WEIGHT GRAPH-->
                <Grid x:Name="WeightGraph" Grid.Row="0" Grid.Column="2" Visibility="{Binding WeightGraphVisibility}">
                    <!--Visibility="{Binding WeightGraphVisibility}"-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"></RowDefinition>
                        <RowDefinition Height="0.3*"></RowDefinition>
                        <RowDefinition Height="0.05*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Hmotnost v čase"
                               FontSize="25"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#294F27"
                               />
                    
                    


                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.07*"></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                            <ColumnDefinition Width="0.05*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.1*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--TEXTBLOCKS FOR DATES-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>


                            
                            <TextBlock Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[0]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[1]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="2"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[2]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="3"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[3]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="4"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[4]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="5"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[5]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                            <TextBlock Grid.Column="6"
                                       Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding DatesArraySecond[6]}"
                                       FontSize="22"
                                       Foreground="#294F27"
                                       FontWeight="SemiBold"
                                       />
                        </Grid>

                        <!--TEXTBLOCKS FOR Y AXIS-->
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.2*"></RowDefinition>
                                <RowDefinition Height="0.2*"></RowDefinition>
                                <RowDefinition Height="0.2*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Text="{Binding TextWeight[0]}"
                                       FontSize="25"
                                       FontWeight="SemiBold"
                                       Foreground="#294F27"
                                       Margin="0,0,10,0"/>

                            <TextBlock Grid.Row="2"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Bottom"
                                       Text="{Binding TextWeight[1]}"
                                       FontSize="25"
                                       FontWeight="SemiBold"
                                       Foreground="#294F27"
                                       Margin="0,0,10,0"/>
                        </Grid>

                        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="8">
                            <Grid Grid.Column="1" x:Name="WeightGraph2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                    <RowDefinition Height="0.1*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!-- GRAY LINES IN GRAPH-->
                                <Canvas Grid.Row="0" Grid.Column="1">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="2">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="3">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="4">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="5">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="6">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>
                                <Canvas Grid.Row="0" Grid.Column="7">
                                    <Line Stroke="LightGray" StrokeDashArray="2 2" StrokeDashOffset="10" Y2="{Binding ElementName=WeightGraph2, Path=ActualHeight}"/>
                                </Canvas>


                                <!--PARSING GRAPH TO SEGMENTS WITH BIND-->
                                <Rectangle x:Name="A0" Grid.Row="0" Grid.Column="0" Grid.RowSpan="{Binding FirstStroke[0]}" Grid.ColumnSpan="1"/>
